[Unit]
Description=NithronOS Privileged Agent (nos-agent)
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/nos-agent
Restart=on-failure
RestartSec=2s
# Create and own the socket; group nos can access
ExecStartPre=/usr/bin/mkdir -p /run
ExecStartPre=/usr/bin/rm -f /run/nos-agent.sock
ExecStartPost=/usr/bin/chmod 660 /run/nos-agent.sock
ExecStartPost=/usr/bin/chgrp nos /run/nos-agent.sock
AmbientCapabilities=CAP_SYS_ADMIN CAP_DAC_READ_SEARCH
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectKernelLogs=yes
ProtectControlGroups=yes
CapabilityBoundingSet=CAP_SYS_ADMIN CAP_DAC_READ_SEARCH
LockPersonality=yes
MemoryDenyWriteExecute=yes
RestrictAddressFamilies=AF_UNIX
RestrictRealtime=yes
SystemCallFilter=@system-service

[Install]
WantedBy=multi-user.target


