#!/bin/bash
set -e

echo "[92-verify-services] Checking basic system services..."

# Only check essential system services, not custom ones
systemctl is-enabled ssh.service 2>/dev/null || echo "SSH not enabled (optional)"
systemctl is-enabled networking.service 2>/dev/null || echo "Networking not enabled (optional)"

# Custom services will be enabled at runtime
echo "[92-verify-services] Custom services will be enabled after boot"

