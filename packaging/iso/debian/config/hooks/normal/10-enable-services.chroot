#!/bin/sh
set -e

# Primary service enablement - only enable services once here
echo "[10-enable-services] Enabling core services..."

# Enable core services
systemctl enable caddy.service || true
systemctl enable nosd.service || true
systemctl enable nos-agent.service || true
systemctl enable nithronos-firstboot.service || true
systemctl enable nithronos-certgen.service || true

echo "[10-enable-services] Core services enabled"


