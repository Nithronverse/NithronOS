#!/bin/sh
set -e

echo "[caddy-enable] Enabling Caddy service for live system..."

# Enable Caddy to start on boot
systemctl enable caddy || true

# Verify the service is enabled
if systemctl is-enabled caddy >/dev/null 2>&1; then
    echo "[caddy-enable] Caddy service successfully enabled"
else
    echo "[caddy-enable] Warning: Caddy service may not be enabled"
fi

echo "[caddy-enable] Done"
