#!/bin/sh
set -e

# Install nftables and apply our rules during image build
apt-get update
apt-get install -y --no-install-recommends nftables
install -D -m0644 /workspace/deploy/firewall/nos.nft /etc/nithronos/nos.nft 2>/dev/null || true
if [ -f /workspace/deploy/firewall/nos.nft ]; then
  install -D -m0644 /workspace/deploy/firewall/nos.nft /etc/nftables.conf
fi
systemctl enable nftables || true


