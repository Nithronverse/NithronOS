#!/bin/sh
set -e

echo "[otp-announce] Setting up OTP announcement scripts..."

# Make scripts executable
chmod +x /usr/lib/nithronos/otp-notify 2>/dev/null || true
chmod +x /etc/update-motd.d/50-nithronos-otp 2>/dev/null || true

# DO NOT enable services here - they will be enabled at runtime
# Services that don't exist yet can cause dependency cycles

echo "[otp-announce] Scripts prepared for runtime"
