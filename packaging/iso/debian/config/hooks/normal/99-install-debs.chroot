#!/bin/sh
set -e
# Install locally built debs if present in /root/debs within chroot
DEB_DIR=/root/debs
if [ -d "$DEB_DIR" ]; then
  # Use non-interactive mode and keep existing config files by default
  export DEBIAN_FRONTEND=noninteractive
  export DEBCONF_NONINTERACTIVE_SEEN=true
  dpkg --force-confold -i $DEB_DIR/*.deb || apt-get -f install -y -o Dpkg::Options::="--force-confold"
fi
# Services are enabled in hook 10, no need to re-enable here

