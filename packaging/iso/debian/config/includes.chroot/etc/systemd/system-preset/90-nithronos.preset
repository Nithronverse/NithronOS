# NithronOS default service presets
# These services will be enabled at boot

# Core system services
enable ssh.service
enable networking.service
enable systemd-networkd.service

# Essential NithronOS services (must run for setup)
enable nos-agent.service
enable nosd.service
enable nithronos-otp-gen.service
enable nithronos-issue-gen.service

# Runtime enabler (enables other services after boot)
enable nithronos-runtime-enable.service

# Services that start conditionally or later
disable caddy.service
disable nos-tls-gen.service
disable otp-announce.service
disable nos-snapshot-prune.service
disable nos-snapshot-prune.timer
