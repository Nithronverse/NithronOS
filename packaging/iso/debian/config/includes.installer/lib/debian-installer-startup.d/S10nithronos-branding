#!/bin/sh
# NithronOS Installer Branding Script

set -e

# Source debconf library
. /usr/share/debconf/confmodule || true

# Set installer title
db_set debian-installer/title "NithronOS Installer" || true

# Set organization name
db_set debian-installer/organization "NithronOS Project" || true

# Set logo if exists
if [ -f /usr/share/graphics/nithronos-logo-mark.png ]; then
    db_set debian-installer/logo /usr/share/graphics/nithronos-logo-mark.png || true
fi

# Custom banner text
cat > /tmp/nithronos-banner << 'EOF'
================================================================================
     _   _ _ _   _                   ___  ____  
    | \ | (_) |_| |__  _ __ ___  _ __/ _ \/ ___| 
    |  \| | | __| '_ \| '__/ _ \| '_ \ | | \___ \ 
    | |\  | | |_| | | | | | (_) | | | |_| |___) |
    |_| \_|_|\__|_| |_|_|  \___/|_| |_\___/____/ 
                                                  
    NithronOS Installation System
    Version 1.0 - Open Source NAS & HomeLab Platform
================================================================================
EOF

# Display banner
cat /tmp/nithronos-banner

# Set default hostname
db_set netcfg/get_hostname "nithronos" || true
db_set netcfg/get_domain "local" || true

exit 0
