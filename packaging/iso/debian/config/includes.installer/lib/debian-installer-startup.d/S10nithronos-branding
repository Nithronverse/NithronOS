#!/bin/sh
# NithronOS Installer Branding Script

set -e

# Set installer title
db_set debian-installer/title "NithronOS Installer"

# Set organization name
db_set debian-installer/organization "NithronOS Project"

# Custom banner text
cat > /tmp/nithronos-banner << 'EOF'
================================================================================
     _   _ _ _   _                   ___  ____  
    | \ | (_) |_| |__  _ __ ___  _ __/ _ \/ ___| 
    |  \| | | __| '_ \| '__/ _ \| '_ \ | | \___ \ 
    | |\  | | |_| | | | | | (_) | | | |_| |___) |
    |_| \_|_|\__|_| |_|_|  \___/|_| |_\___/____/ 
                                                  
    NithronOS Installation System
    Version 1.0 - Open Source NAS & HomeLab Platform
================================================================================
EOF

# Display banner
cat /tmp/nithronos-banner

# Set default hostname
db_set netcfg/get_hostname "nithronos"
db_set netcfg/get_domain "local"

exit 0
