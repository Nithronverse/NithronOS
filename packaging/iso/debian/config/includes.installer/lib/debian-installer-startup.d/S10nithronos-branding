#!/bin/sh
# NithronOS Installer Branding Script - Non-blocking

set -e

# Source debconf library (if available)
. /usr/share/debconf/confmodule 2>/dev/null || true

# Set installer title (non-blocking)
db_set debian-installer/title "NithronOS Installer" 2>/dev/null || true

# Set organization name
db_set debian-installer/organization "NithronOS Project" 2>/dev/null || true

# Set logo if exists
if [ -f /usr/share/graphics/nithronos-logo-mark.png ]; then
    db_set debian-installer/logo /usr/share/graphics/nithronos-logo-mark.png 2>/dev/null || true
fi

# Set default hostname
db_set netcfg/get_hostname "nithronos" 2>/dev/null || true
db_set netcfg/get_domain "local" 2>/dev/null || true

# Exit immediately - no blocking operations, no banner display
exit 0